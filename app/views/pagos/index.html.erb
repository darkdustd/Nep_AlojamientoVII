  <div class= "container">
<p id="notice"><%= notice %></p>

<h1>Pagos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre tarjeta</th>
      <th>Numero tarjeta</th>
      <th>Cvv tarjeta</th>
      <th>Fecha tarjeta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.nombre_tarjeta %></td>
        <td><%= pago.numero_tarjeta %></td>
        <td><%= pago.cvv_tarjeta %></td>
        <td><%= pago.fecha_tarjeta %></td>
        <td><%= link_to 'Show', pago %></td>
        <td><%= link_to 'Edit', edit_pago_path(pago) %></td>
        <td><%= link_to 'Destroy', pago, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

